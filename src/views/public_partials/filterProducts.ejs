<form action="<%=view%>">

    <div class="columns">
        <div class="column">
          <a href="/producto" class="myButton">Cuadricula</a>
          <a href="/producto-lists" class="myButton">Listado</a>
        </div>
      </div>
      <h3 class="mb-2">Filtros</h3>
      
    <div class="column">

      <div class="field">
        <label class="label">Nombre</label>
        <div class="control">
          <input name="nombre" class="myInput" type="text" placeholder="">
        </div>
      </div>

      <div class="field">
        <label class="label">Descripci√≥n</label>
        <div class="control">
          <input name="descripcion" class="myInput" type="text" placeholder="">
        </div>
      </div>

      <div class="field">
        <label class="label">Marca</label>
        <div class="control">
          <select name="marca" id="marca" class="myInput">
            <option value="">--Seleccione--</option>

            <% marcas.forEach(function(marca) { %>
            <option value="<%=marca.marca%>"> <%=marca.marca%></option>
            <%})%>
          </select>
        </div>
      </div>

      <div class="field">
        <label class="label">Categoria</label>
        <div class="control">
          <select name="categoria_id" id="categoria_id" class="myInput">
            <option value="">--Seleccione--</option>
            <% categorias.forEach(function(categoria) { %>
            <option value="<%=categoria.id%>"> <%=categoria.nombre%></option>

            <%})%>
          </select>
        </div>
      </div>

      <div class="field">
        <label class="label">Precio</label>
        <div class="control">
          <input name="precio" class="myInput" type="text" placeholder="">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="myButton myPrimaryButton ">Buscar</button>
        </div>
      </div>

    </div>
  </form>